@using CarSalesSystem.DTOs
@model List<CarDto>



<section class="hero-search">
    <div class="container-xl">
        <h1>Find Your Next Car</h1>

        <div class="search-box">
            <div class="filter-pill">Cars</div>
            <div class="filter-pill">Brand</div>
            <div class="filter-pill">Fuel</div>
            <div class="filter-pill">Price</div>
            <div class="filter-pill">Year</div>

            <a asp-controller="Car" asp-action="GetByFuel" asp-route-fuelType="Petrol" class="btn btn-outline-primary me-2">Petrol </a>
            <a asp-controller="Car" asp-action="GetByFuel" asp-route-fuelType="Diesel" class="btn btn-outline-primary me-2">Diesel </a>
            @* <a asp-controller="Car" asp-action="GetByYear" asp-route-year="Year" class="btn btn-outline-primary me-2">Year </a> *@
            <form asp-controller="Car" asp-action="GetByYear" method="get" class="d-flex gap-2 align-items-center">
                <input type="number" name="minYear" class="form-control" style="max-width: 130px;"
                       placeholder="Min year" min="1886" max="2100" />

                <input type="number" name="maxYear" class="form-control" style="max-width: 130px;"
                       placeholder="Max year" min="1886" max="2100" />

                <button type="submit" class="btn btn-outline-primary">Year</button>
            </form>
            @* <a asp-controller="Car" asp-action="SortByPrice" asp-route-sortOrder="asc" class="btn btn-success me-2">Sort by Price ↑ </a>
            <a asp-controller="Car" asp-action="SortByPrice" asp-route-sortOrder="desc" class="btn btn-danger">Sort by Price ↓ </a> *@


        </div>
    </div>
</section>


<section class="latest-cars">
    <div class="container-xl">
        <h2>Latest Listings</h2>

        <div class="row g-4">
            @foreach (var car in Model)
            {
                <div class="col-md-3">
                    <div class="car-card">
                        <img src="@car.ImageUrl" alt="Car image" />
                        <span class="price">@car.Price BGN</span>

                        <h5>@car.Brand @car.Model</h5>
                        <p>@car.Year • @car.FuelType • @car.Mileage km</p>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

