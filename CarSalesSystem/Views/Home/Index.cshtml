@using CarSalesSystem.DTOs
@model List<CarDto>



<section class="hero-search">
    <div class="container-xl">
        <h1>Find Your Next Car</h1>

        <form asp-controller="Car" asp-action="Search" method="get" class="search-box">

            
            <div class="filter-group">
                <label class="filter-label">Fuel Type</label>
                <div class="d-flex gap-2">
                    <input type="radio" class="btn-check" name="fuelType" id="fuelPetrol" value="Petrol" autocomplete="off">
                    <label class="btn btn-outline-primary" for="fuelPetrol">Petrol</label>

                    <input type="radio" class="btn-check" name="fuelType" id="fuelDiesel" value="Diesel" autocomplete="off">
                    <label class="btn btn-outline-primary" for="fuelDiesel">Diesel</label>

                    <input type="radio" class="btn-check" name="fuelType" id="fuelAny" value="" autocomplete="off" checked>
                    <label class="btn btn-outline-secondary" for="fuelAny">Any</label>
                </div>
            </div>

            
            <div class="filter-group">
                <label class="filter-label" for="brandType">Brand</label>
                <select name="brandType" id="brandType" class="form-select" style="max-width: 200px;">
                    <option value="">Any Brand</option>
                    <option value="Toyota">Toyota</option>
                    <option value="BMW">BMW</option>
                    <option value="Ford">Ford</option>
                </select>
            </div>

            
            <div class="filter-group">
                <label class="filter-label">Year Range</label>
                <div class="d-flex gap-2">
                    <input type="number" name="minYear" class="form-control"
                           style="max-width: 130px;" placeholder="Min year"
                           min="1886" max="2100" />
                    <input type="number" name="maxYear" class="form-control"
                           style="max-width: 130px;" placeholder="Max year"
                           min="1886" max="2100" />
                </div>
            </div>

            
            <button type="submit" class="btn btn-success px-4">
                🔍 Search
            </button>
           

        </form>
    </div>
</section>

<section class="latest-cars">
    <div class="container-xl">
        <h2>Latest Listings</h2>

        <div class="row g-4">
            @foreach (var car in Model)
            {
                <div class="col-md-3">
                    <div class="car-card">
                        <img src="@car.ImageUrl" alt="Car image" />
                        <span class="price">@car.Price BGN</span>

                        <h5>@car.Brand @car.Model</h5>
                        <p>@car.Year • @car.FuelType • @car.Mileage km</p>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

