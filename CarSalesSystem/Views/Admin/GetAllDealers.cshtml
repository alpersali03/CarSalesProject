@using CarSalesSystem.DTOs
@using CarSalesSystem.Data.Model
@model List<DealerDto>

<a asp-controller="Admin" asp-action="GetAllDealers" class="btn btn-primary mb-3 top-0 left-0" type="submit">GoBack</a>



<div class="row">
	@foreach (var dealer in Model)
	{
		<div class="col-md-4">
			<div class="card mb-3">
				<div class="card-body text-center">
					<h5 class="card-title text-center"> @dealer.Name</h5>


					@* <a asp-controller="Admin" asp-action="GetAllDealers" asp-route-id="@dealer.Id" class="btn btn-warning">GetAll</a> *@
					<a asp-controller="Admin" asp-area="Admin" asp-action="Edit" asp-route-id="@dealer.Id" class="btn btn-warning">Edit</a>
					<a asp-controller="Admin" asp-area="Admin" asp-action="Delete" asp-route-id="@dealer.Id" class="btn btn-warning">Delete</a>
					<a asp-controller="Admin" asp-action="GetAllCars" asp-route-dealerId="@dealer.Id" class="btn btn-warning">GetAllCars</a>
					
				</div>
			</div>
		</div>
	}
</div>
