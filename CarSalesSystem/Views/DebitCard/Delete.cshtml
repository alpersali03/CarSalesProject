@using CarSalesSystem.DTOs
@model DebitCardDto

@{
    ViewData["Title"] = "Delete Debit Card";
}

<h2 class="text-danger">Delete Debit Card</h2>

<h4>Are you sure you want to delete this debit card?</h4>

<div>
    <dl class="row">
        <dt class="col-sm-2">Card Number</dt>
        <dd class="col-sm-10">@Model.CardNumber</dd>

        <dt class="col-sm-2">Full Name</dt>
        <dd class="col-sm-10">@Model.FullName</dd>

        <dt class="col-sm-2">Expiration</dt>
        <dd class="col-sm-10">@Model.ExpirationMonth / @Model.ExpirationYear</dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
   
    <input type="hidden" name="id" value="@ViewBag.Id" />

    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="GetAll" class="btn btn-secondary">Cancel</a>
</form>
